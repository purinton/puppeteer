{
    "name": "@purinton/puppeteer",
    "type": "module",
    "version": "1.0.1",
    "description": "A Puppeteer-powered MCP server for advanced web scraping and extraction tools, easily extendable for AI and automation workflows.",
    "main": "puppeteer.mjs",
    "scripts": {
        "start": "node puppeteer.mjs",
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/puppeteer.git"
    },
    "keywords": [
        "puppeteer",
        "web scraping",
        "automation",
        "mcp-server",
        "ai-tools",
        "nodejs"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/puppeteer/issues"
    },
    "homepage": "https://github.com/purinton/puppeteer#readme",
    "devDependencies": {
        "jest": "^30.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/common": "^1.0.10",
        "@purinton/mcp-server": "^1.0.14",
        "dotenv": "^16.5.0",
        "puppeteer": "^24.10.1"
    }
}